# --- Obrigatório em produção ---
SECRET_KEY=sua-chave-secreta-longa-e-aleatoria-aqui
DEBUG=False
ALLOWED_HOSTS=gestao.lplan.com.br,www.gestao.lplan.com.br

# --- Desenvolvimento local ---
# USE_LOCAL_DB=True   (usa SQLite; não precisa MySQL)
